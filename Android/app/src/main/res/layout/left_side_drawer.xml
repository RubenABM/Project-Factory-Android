<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/leftside_menu_layout"
    android:orientation="vertical"
    android:paddingBottom="40dp"
    android:paddingLeft="5dp"
    android:paddingRight="40dp"
    android:background="#317f8c">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="left"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:src="@drawable/baseline_menu_24"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:onClick="ClickHelmets"
        android:gravity="left">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Helmets"
            android:textSize="20dp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="5dp"
        android:background="#40e0d0"
        android:layout_gravity="right"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:onClick="ClickActivity"
        android:gravity="left">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Activity"
            android:textSize="20dp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="5dp"
        android:background="#40e0d0"
        android:layout_gravity="right"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:orientation="horizontal"
        android:onClick="ClickChallenges">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Challenges"
            android:textSize="20dp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="5dp"
        android:background="#40e0d0"
        android:layout_gravity="right"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:orientation="horizontal"
        android:onClick="ClickHealth">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Health"
            android:textSize="20dp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="5dp"
        android:background="#40e0d0"
        android:layout_gravity="right"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:orientation="horizontal"
        android:onClick="ClickPoints">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Points"
            android:textSize="20dp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="5dp"
        android:background="#40e0d0"
        android:layout_gravity="right"/>

</LinearLayout>