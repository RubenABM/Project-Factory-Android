<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D9D9D9"
    tools:context=".ChallengesActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/main_toolbar"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:id="@+id/frame_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffff">


            </FrameLayout>



            <TextView
                android:id="@+id/textViewTitleSettings"
                android:layout_width="172dp"
                android:layout_height="42dp"
                android:text="Challenges"
                android:textColor="#000"
                android:textSize="34sp"
                android:textStyle="bold"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="10dp" />

            <RelativeLayout
                android:id="@+id/relativeLayoutChallenges"
                android:layout_width="419dp"
                android:layout_height="223dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="0dp">

                <TextView
                    android:id="@+id/textViewChallengePoints"
                    android:layout_width="142dp"
                    android:layout_height="36dp"
                    android:layout_marginLeft="75dp"
                    android:layout_marginTop="140dp"
                    android:text="5 pontos"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/imageViewPoints"
                    android:layout_width="64dp"
                    android:layout_height="63dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="110dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="343dp"
                    android:layout_marginBottom="43dp"
                    app:srcCompat="@drawable/trophy" />

                <TextView
                    android:id="@+id/textViewChallengeDescription"
                    android:layout_width="248dp"
                    android:layout_height="36dp"
                    android:layout_marginLeft="75dp"
                    android:layout_marginTop="110dp"
                    android:text="Fazer um percurso de 5km"
                    android:textColor="#000000"
                    android:textSize="20sp" />


                <ImageView
                    android:id="@+id/imageViewChallengeDone"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="350dp"
                    android:layout_marginTop="110dp"
                    app:srcCompat="@drawable/done" />
            </RelativeLayout>

        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_gravity="start">

        <include layout="@layout/left_side_drawer"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:id="@+id/right_side_drawer_layout"
        android:layout_gravity="end">

        <include layout="@layout/right_side_drawer"/>

    </RelativeLayout>


</androidx.drawerlayout.widget.DrawerLayout>