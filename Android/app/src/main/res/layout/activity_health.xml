<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D9D9D9"
    tools:context=".HealthActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/main_toolbar"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:id="@+id/frame_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffff">

            </FrameLayout>



            <TextView
                android:id="@+id/textViewTitleHealth"
                android:layout_width="172dp"
                android:layout_height="42dp"
                android:text="Health"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="34sp"
                android:textStyle="bold"
                android:layout_marginLeft="110dp"
                android:layout_marginTop="10dp"/>

            <Button
                android:id="@+id/buttonChange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:backgroundTint="#003B3F"
                android:text="Medir"
                android:textColor="#FFFFFF"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="500dp" />

            <ImageView
                android:id="@+id/imageViewPoints"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="100dp"
                app:srcCompat="@drawable/heartpulse" />

            <TextView
                android:id="@+id/textViewBPM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BPM"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginLeft="175dp"
                android:layout_marginTop="300dp"/>

            <TextView
                android:id="@+id/textViewTemperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TEMPERATURA"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginLeft="140dp"
                android:layout_marginTop="400dp" />

            <TextView
                android:id="@+id/textViewBPMResults"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textColor="#000000"
                android:layout_marginLeft="165dp"
                android:layout_marginTop="350dp"/>

            <TextView
                android:id="@+id/textViewTemperatureResults"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textColor="#000000"
                android:layout_marginLeft="165dp"
                android:layout_marginTop="450dp" />

        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_gravity="start">

        <include layout="@layout/left_side_drawer"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:id="@+id/right_side_drawer_layout"
        android:layout_gravity="end">

        <include layout="@layout/right_side_drawer"/>

    </RelativeLayout>


</androidx.drawerlayout.widget.DrawerLayout>