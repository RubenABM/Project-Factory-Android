<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D9D9D9"
    tools:context=".HelmetsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/main_toolbar"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:id="@+id/frame_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffff">


            </FrameLayout>

            <TextView
                android:id="@+id/textViewTitleSubscriptions"
                android:layout_width="130dp"
                android:layout_height="45dp"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="10dp"
                android:text="Helmets"
                android:textColor="#000"
                android:textSize="34sp"
                android:textStyle="bold"/>



            <Button
                android:id="@+id/buttonChange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:backgroundTint="#003B3F"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="500dp"
                android:text="Selecionar"
                android:textColor="#FFFFFF"/>

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="101dp"
                android:layout_height="99dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="100dp"
                app:srcCompat="@drawable/helmet" />

            <TextView
                android:id="@+id/textViewDescricao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Descrição do capacete"
                android:textColor="#000000"
                android:textSize="16sp"
                android:layout_marginLeft="200dp"
                android:layout_marginTop="135dp" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="404dp"
                android:text="Estado: Ativo/desativado"
                android:textColor="#000000"
                android:textSize="16sp"
                android:layout_marginLeft="200dp"
                android:layout_marginTop="155dp"/>


        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_gravity="start">

        <include layout="@layout/left_side_drawer"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:id="@+id/right_side_drawer_layout"
        android:layout_gravity="end">

        <include layout="@layout/right_side_drawer"/>

    </RelativeLayout>

</androidx.drawerlayout.widget.DrawerLayout>